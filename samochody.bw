knowledge base samochody

facets
	single yes;
	typ_samochodu:
	 query "Wybierz typ samochodu: "
	 val oneof {"Kompakt", "SUV", "Kabriolet", "Najtanszy"};

	zuzycie_paliwa:
	 query "Wybierz zuzycie paliwa: "
	 val oneof {"wiecej niz 8 litrow","mniej niz 8 litrow"};
	
	ilosc_drzwi:
         query "Ilu drzwiowy ma byc samochod: "
         val oneof {"3-drzwiowy", "5-drzwiowy"};

	moc_silnika:
         query "Jaka moc silnika (KM) ma miec samochod: "
         val oneof {"<100", ">100"};

	rocznik:
       	 query "Z ktorego roku ma byc samochod: "
       	 val oneof {"<2008", ">2008"};
	
	samochod :
		ask no;

end;

